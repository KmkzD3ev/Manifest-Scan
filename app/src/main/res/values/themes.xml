<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Teste" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ciano</item>
        <item name="colorPrimaryVariant">@color/ciano</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ciano</item>
        <item name="colorSecondaryVariant">@color/ciano</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Font family -->
        <item name="android:fontFamily">@font/robotolight</item>
        <item name="fontFamily">@font/robotolight</item>
    </style>

    <style name="Theme.Teste.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Teste.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Teste.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>