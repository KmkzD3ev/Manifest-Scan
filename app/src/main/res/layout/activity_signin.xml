<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:id="@+id/main"
    android:fillViewport="true">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cinza"
        android:orientation="vertical"
        tools:context=".Views.SingIn">


        <ImageView
            android:layout_width="380dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/emissor_logo_fotor_bg_remover_2024070316413">

        </ImageView>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contiD"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/ciano"
            app:errorEnabled="true"
            app:helperTextEnabled="true"
            android:layout_marginTop="50dp"
            app:helperTextTextColor="@color/ciano"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="none"
            android:background="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ediId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginStart="40dp"
                android:hint="      Codigo LicenÃ§a"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@drawable/edit_text_underline"
                android:singleLine="true"
                android:lines="1">
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contSenha"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/ciano"
            app:errorEnabled="true"
            app:helperTextEnabled="true"
            app:helperTextTextColor="@color/ciano"
            app:hintTextColor="@color/black"
            app:boxBackgroundMode="none"
            android:background="@android:color/transparent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:hint="      Telefone"
                android:inputType="numberDecimal"
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/color_cursor"
                android:background="@drawable/edit_text_underline"
                android:singleLine="true"
                android:lines="1">
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btlogar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/ciano"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>
</LinearLayout>